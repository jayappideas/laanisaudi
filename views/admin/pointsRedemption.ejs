<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<head>
    <%- include('../_layouts/head') %>
    <title>Points Redemption Report | <%= title %></title>
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/data-tables/css/jquery.dataTables.min.css">
</head>

<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 2-columns" data-open="click" data-menu="vertical-dark-menu" data-col="2-columns">

    <%- include('../_layouts/sidenavbar') %>

    <div id="main">
        <div class="row">
            <div class="pt-1 pb-0" id="breadcrumbs-wrapper">
                <div class="container">
                    <div class="row">
                        <%- include('../messages', { messages: messages }) %>
                        <div class="col s12 m6 l6">
                            <h6 class="breadcrumbs-title"><span>Points Redemption Report</span></h6>
                        </div>
                        <div class="col s12 m6 l6 right-align-md" style="margin-top: -10px;">
                            <ol class="breadcrumbs mb-0">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/admin/reports">Reports</a></li>
                                <li class="breadcrumb-item active">Points Redemption</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="col s12">
                <div class="container">
                    <div class="card">
                        <div class="card-content">
                            <form action="/admin/reports/points-redemption" method="GET">
                                <div class="row">
                                    <div class="col s12 m3">
                                        <label>Start Date</label>
                                        <input type="date" name="startDate" value="<%= startDate %>" class="browser-default">
                                    </div>
                                    <div class="col s12 m3">
                                        <label>End Date</label>
                                        <input type="date" name="endDate" value="<%= endDate %>" class="browser-default">
                                    </div>
                                    <div class="col s12 m3">
                                        <label>&nbsp;</label>
                                        <button type="submit" class="btn waves-effect waves-light" style="width: 100%;">
                                            <i class="material-icons left">filter_list</i> Filter
                                        </button>
                                    </div>
                                    <div class="col s12 m3">
                                        <label>&nbsp;</label>
                                        <a href="/admin/reports/export?type=redemptions&format=csv&startDate=<%= startDate %>&endDate=<%= endDate %>" class="btn green waves-effect waves-light" style="width: 100%;">
                                            <i class="material-icons left">file_download</i> Export CSV
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Statistics -->
            <div class="col s12">
                <div class="container">
                    <div class="row">
                        <div class="col s12 m4">
                            <div class="card gradient-45deg-purple-deep-purple gradient-shadow">
                                <div class="card-content" style="padding: 20px;">
                                    <h5 class="white-text" style="margin: 0 0 10px 0; font-size: 14px;">Total Points Redeemed</h5>
                                    <h3 class="white-text" style="margin: 0; font-size: 28px;"><%= stats.totalPointsRedeemed || 0 %></h3>
                                </div>
                            </div>
                        </div>
                        <div class="col s12 m4">
                            <div class="card gradient-45deg-amber-amber gradient-shadow">
                                <div class="card-content" style="padding: 20px;">
                                    <h5 class="white-text" style="margin: 0 0 10px 0; font-size: 14px;">Total Discount Value</h5>
                                    <h3 class="white-text" style="margin: 0; font-size: 28px;">SAR <%= (stats.totalDiscountValue || 0).toFixed(2) %></h3>
                                </div>
                            </div>
                        </div>
                        <div class="col s12 m4">
                            <div class="card gradient-45deg-green-teal gradient-shadow">
                                <div class="card-content" style="padding: 20px;">
                                    <h5 class="white-text" style="margin: 0 0 10px 0; font-size: 14px;">Total Redemptions</h5>
                                    <h3 class="white-text" style="margin: 0; font-size: 28px;"><%= stats.totalRedemptions || 0 %></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Redemptions Table -->
            <div class="col s12">
                <div class="container">
                    <div class="card">
                        <div class="card-content">
                            <h6 class="card-title">Points Redemption Details</h6>
                            <div class="row">
                                <div class="col s12">
                                    <table class="striped responsive-table">
                                        <thead>
                                            <tr>
                                                <th>Date & Time</th>
                                                <th>Customer</th>
                                                <th>Vendor</th>
                                                <th>Points Redeemed</th>
                                                <th>Discount Value (SAR)</th>
                                                <th>Bill Amount</th>
                                                <th>Final Amount</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (redemptions && redemptions.length > 0) { %>
                                                <% redemptions.forEach(redemption => { %>
                                                    <tr>
                                                        <td>
                                                            <%= new Date(redemption.createdAt).toLocaleString('en-US', {
                                                                year: 'numeric',
                                                                month: 'short',
                                                                day: 'numeric',
                                                                hour: '2-digit',
                                                                minute: '2-digit'
                                                            }) %>
                                                        </td>
                                                        <td><%= redemption.user?.name || 'N/A' %></td>
                                                        <td><%= redemption.staff?.vendor?.businessName || 'N/A' %></td>
                                                        <td><%= redemption.spentPoints || 0 %></td>
                                                        <td><%= (redemption.discountAmount || 0).toFixed(2) %></td>
                                                        <td><%= (redemption.billAmount || 0).toFixed(2) %></td>
                                                        <td><%= (redemption.finalAmount || 0).toFixed(2) %></td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="7" class="center-align">No redemption data available</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Pagination -->
                            <% if (totalPages > 1) { %>
                                <div class="row">
                                    <div class="col s12 center-align">
                                        <ul class="pagination">
                                            <% for(let i = 1; i <= totalPages; i++) { %>
                                                <li class="<%= i == currentPage ? 'active' : 'waves-effect' %>">
                                                    <a href="/admin/reports/points-redemption?page=<%= i %>&startDate=<%= startDate %>&endDate=<%= endDate %>"><%= i %></a>
                                                </li>
                                            <% } %>
                                        </ul>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <%- include('../_layouts/commonJs') %>

</body>
</html>
