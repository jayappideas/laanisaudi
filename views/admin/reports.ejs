<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<!-- BEGIN: Head-->

<head>
    <%- include('../_layouts/head') %>
    <title>Revenue & Reports | <%= title %></title>
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/data-tables/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="/app-assets/css/pages/data-tables.css">
    <style>
        .stats-card {
            padding: 20px;
            margin: 10px 0;
            border-radius: 8px;
        }
        .stats-card h5 {
            margin: 0 0 10px 0;
            font-size: 14px;
            color: #666;
        }
        .stats-card h3 {
            margin: 0;
            font-size: 28px;
            font-weight: bold;
        }
        .filter-section {
            background: white;
            padding: 20px;
            margin: 20px 0;
            border-radius: 8px;
        }
    </style>
</head>
<!-- END: Head-->

<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 2-columns" data-open="click" data-menu="vertical-dark-menu" data-col="2-columns">

    <%- include('../_layouts/sidenavbar') %>

    <!-- BEGIN: Page Main-->
    <div id="main">
        <div class="row">
            <div class="pt-1 pb-0" id="breadcrumbs-wrapper">
                <div class="container">
                    <div class="row">
                        <%- include('../messages', { messages: messages }) %>
                        <div class="col s12 m6 l6">
                            <h6 class="breadcrumbs-title"><span>Revenue & Reports Dashboard</span></h6>
                        </div>
                        <div class="col s12 m6 l6 right-align-md" style="margin-top: -10px;">
                            <ol class="breadcrumbs mb-0">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item active">Reports</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="col s12">
                <div class="container">
                    <div class="filter-section">
                        <form action="/admin/reports" method="GET">
                            <div class="row">
                                <div class="col s12 m3">
                                    <label>Period</label>
                                    <select name="period" class="browser-default">
                                        <option value="all" <%= period === 'all' ? 'selected' : '' %>>All Time</option>
                                        <option value="today" <%= period === 'today' ? 'selected' : '' %>>Today</option>
                                        <option value="week" <%= period === 'week' ? 'selected' : '' %>>This Week</option>
                                        <option value="month" <%= period === 'month' ? 'selected' : '' %>>This Month</option>
                                        <option value="year" <%= period === 'year' ? 'selected' : '' %>>This Year</option>
                                        <option value="custom" <%= startDate && endDate ? 'selected' : '' %>>Custom Range</option>
                                    </select>
                                </div>
                                <div class="col s12 m3">
                                    <label>Start Date</label>
                                    <input type="date" name="startDate" value="<%= startDate %>" class="browser-default">
                                </div>
                                <div class="col s12 m3">
                                    <label>End Date</label>
                                    <input type="date" name="endDate" value="<%= endDate %>" class="browser-default">
                                </div>
                                <div class="col s12 m3">
                                    <label>&nbsp;</label>
                                    <button type="submit" class="btn waves-effect waves-light" style="width: 100%;">
                                        <i class="material-icons left">filter_list</i> Filter
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="col s12">
                <div class="container">
                    <div class="row">
                        <div class="col s12 m6 l3">
                            <div class="card stats-card gradient-45deg-light-blue-cyan gradient-shadow">
                                <h5 class="white-text">Total Revenue</h5>
                                <h3 class="white-text">SAR <%= (stats.totalRevenue || 0).toFixed(2) %></h3>
                            </div>
                        </div>
                        <div class="col s12 m6 l3">
                            <div class="card stats-card gradient-45deg-amber-amber gradient-shadow">
                                <h5 class="white-text">Total Commission</h5>
                                <h3 class="white-text">SAR <%= (stats.totalCommission || 0).toFixed(2) %></h3>
                            </div>
                        </div>
                        <div class="col s12 m6 l3">
                            <div class="card stats-card gradient-45deg-green-teal gradient-shadow">
                                <h5 class="white-text">Total Transactions</h5>
                                <h3 class="white-text"><%= stats.totalTransactions || 0 %></h3>
                            </div>
                        </div>
                        <div class="col s12 m6 l3">
                            <div class="card stats-card gradient-45deg-purple-deep-purple gradient-shadow">
                                <h5 class="white-text">Points Redeemed</h5>
                                <h3 class="white-text"><%= stats.totalPointsSpent || 0 %></h3>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col s12 m6 l3">
                            <div class="card stats-card white">
                                <h5>Total Bill Amount</h5>
                                <h3>SAR <%= (stats.totalBillAmount || 0).toFixed(2) %></h3>
                            </div>
                        </div>
                        <div class="col s12 m6 l3">
                            <div class="card stats-card white">
                                <h5>Total Discounts</h5>
                                <h3>SAR <%= (stats.totalDiscounts || 0).toFixed(2) %></h3>
                            </div>
                        </div>
                        <div class="col s12 m6 l3">
                            <div class="card stats-card white">
                                <h5>Points Earned</h5>
                                <h3><%= stats.totalPointsEarned || 0 %></h3>
                            </div>
                        </div>
                        <div class="col s12 m6 l3">
                            <div class="card stats-card white">
                                <h5>Active Users</h5>
                                <h3><%= totalUsers || 0 %></h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Links -->
            <div class="col s12">
                <div class="container">
                    <div class="row">
                        <div class="col s12">
                            <div class="card">
                                <div class="card-content">
                                    <h6 class="card-title">Detailed Reports</h6>
                                    <div class="row">
                                        <div class="col s12 m3">
                                            <a href="/admin/reports/points-redemption" class="btn waves-effect waves-light" style="width: 100%;">
                                                <i class="material-icons left">redeem</i> Points Redemption
                                            </a>
                                        </div>
                                        <div class="col s12 m3">
                                            <a href="/admin/reports/customer-activity" class="btn waves-effect waves-light" style="width: 100%;">
                                                <i class="material-icons left">people</i> Customer Activity
                                            </a>
                                        </div>
                                        <div class="col s12 m3">
                                            <a href="/admin/reports/vendor-commission" class="btn waves-effect waves-light" style="width: 100%;">
                                                <i class="material-icons left">account_balance</i> Vendor Commission
                                            </a>
                                        </div>
                                        <div class="col s12 m3">
                                            <a href="/admin/reports/export?type=transactions&format=csv&startDate=<%= startDate %>&endDate=<%= endDate %>" class="btn waves-effect waves-light green" style="width: 100%;">
                                                <i class="material-icons left">file_download</i> Export CSV
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Top Vendors Table -->
            <div class="col s12">
                <div class="container">
                    <div class="row">
                        <div class="col s12">
                            <div class="card">
                                <div class="card-content">
                                    <h6 class="card-title">Top Performing Vendors</h6>
                                    <div class="row">
                                        <div class="col s12">
                                            <table class="striped responsive-table">
                                                <thead>
                                                    <tr>
                                                        <th>Rank</th>
                                                        <th>Vendor Name</th>
                                                        <th>Total Revenue</th>
                                                        <th>Commission</th>
                                                        <th>Transactions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (topVendors && topVendors.length > 0) { %>
                                                        <% topVendors.forEach((vendor, index) => { %>
                                                            <tr>
                                                                <td><%= index + 1 %></td>
                                                                <td><%= vendor.vendorDetails.businessName || 'N/A' %></td>
                                                                <td>SAR <%= (vendor.totalRevenue || 0).toFixed(2) %></td>
                                                                <td>SAR <%= (vendor.totalCommission || 0).toFixed(2) %></td>
                                                                <td><%= vendor.transactionCount || 0 %></td>
                                                            </tr>
                                                        <% }); %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="5" class="center-align">No data available</td>
                                                        </tr>
                                                    <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- END: Page Main-->

    <%- include('../_layouts/commonJs') %>
    <script src="/app-assets/vendors/data-tables/js/jquery.dataTables.min.js"></script>
    <script src="/app-assets/js/scripts/data-tables.js"></script>

</body>

</html>
