<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<head>
    <%- include('../_layouts/head') %>
    <title>Customer Activity Report | <%= title %></title>
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/data-tables/css/jquery.dataTables.min.css">
</head>

<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 2-columns" data-open="click" data-menu="vertical-dark-menu" data-col="2-columns">

    <%- include('../_layouts/sidenavbar') %>

    <div id="main">
        <div class="row">
            <div class="pt-1 pb-0" id="breadcrumbs-wrapper">
                <div class="container">
                    <div class="row">
                        <%- include('../messages', { messages: messages }) %>
                        <div class="col s12 m6 l6">
                            <h6 class="breadcrumbs-title"><span>Customer Activity Report - <%= vendor?.businessName || 'All Vendors' %></span></h6>
                        </div>
                        <div class="col s12 m6 l6 right-align-md" style="margin-top: -10px;">
                            <ol class="breadcrumbs mb-0">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/admin/reports">Reports</a></li>
                                <li class="breadcrumb-item active">Customer Activity</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="col s12">
                <div class="container">
                    <div class="card">
                        <div class="card-content">
                            <form action="/admin/reports/customer-activity" method="GET">
                                <div class="row">
                                    <div class="col s12 m3">
                                        <label>Vendor ID (Required)</label>
                                        <input type="text" name="vendorId" value="<%= vendorId %>" class="browser-default" required>
                                    </div>
                                    <div class="col s12 m3">
                                        <label>Start Date</label>
                                        <input type="date" name="startDate" value="<%= startDate %>" class="browser-default">
                                    </div>
                                    <div class="col s12 m3">
                                        <label>End Date</label>
                                        <input type="date" name="endDate" value="<%= endDate %>" class="browser-default">
                                    </div>
                                    <div class="col s12 m3">
                                        <label>&nbsp;</label>
                                        <button type="submit" class="btn waves-effect waves-light" style="width: 100%;">
                                            <i class="material-icons left">filter_list</i> Filter
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Customer Activity Table -->
            <div class="col s12">
                <div class="container">
                    <div class="card">
                        <div class="card-content">
                            <h6 class="card-title">Customer Activity Details</h6>
                            <div class="row">
                                <div class="col s12">
                                    <table class="striped responsive-table">
                                        <thead>
                                            <tr>
                                                <th>Customer Name</th>
                                                <th>Email</th>
                                                <th>Total Visits</th>
                                                <th>Total Spent (SAR)</th>
                                                <th>Points Earned</th>
                                                <th>Points Redeemed</th>
                                                <th>Last Visit</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (customerActivity && customerActivity.length > 0) { %>
                                                <% customerActivity.forEach(activity => { %>
                                                    <tr>
                                                        <td><%= activity.customerDetails?.name || 'N/A' %></td>
                                                        <td><%= activity.customerDetails?.email || 'N/A' %></td>
                                                        <td><%= activity.totalVisits || 0 %></td>
                                                        <td><%= (activity.totalSpent || 0).toFixed(2) %></td>
                                                        <td><%= activity.totalPointsEarned || 0 %></td>
                                                        <td><%= activity.totalPointsRedeemed || 0 %></td>
                                                        <td>
                                                            <%= new Date(activity.lastVisit).toLocaleString('en-US', {
                                                                year: 'numeric',
                                                                month: 'short',
                                                                day: 'numeric'
                                                            }) %>
                                                        </td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="7" class="center-align">No customer activity data available</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Pagination -->
                            <% if (totalPages > 1) { %>
                                <div class="row">
                                    <div class="col s12 center-align">
                                        <ul class="pagination">
                                            <% for(let i = 1; i <= totalPages; i++) { %>
                                                <li class="<%= i == currentPage ? 'active' : 'waves-effect' %>">
                                                    <a href="/admin/reports/customer-activity?page=<%= i %>&vendorId=<%= vendorId %>&startDate=<%= startDate %>&endDate=<%= endDate %>"><%= i %></a>
                                                </li>
                                            <% } %>
                                        </ul>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <%- include('../_layouts/commonJs') %>

</body>
</html>
