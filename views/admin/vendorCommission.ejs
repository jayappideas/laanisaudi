<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<head>
    <%- include('../_layouts/head') %>
    <title>Vendor Commission Report | <%= title %></title>
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/data-tables/css/jquery.dataTables.min.css">
</head>

<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 2-columns" data-open="click" data-menu="vertical-dark-menu" data-col="2-columns">

    <%- include('../_layouts/sidenavbar') %>

    <div id="main">
        <div class="row">
            <div class="pt-1 pb-0" id="breadcrumbs-wrapper">
                <div class="container">
                    <div class="row">
                        <%- include('../messages', { messages: messages }) %>
                        <div class="col s12 m6 l6">
                            <h6 class="breadcrumbs-title"><span>Vendor Commission Report</span></h6>
                        </div>
                        <div class="col s12 m6 l6 right-align-md" style="margin-top: -10px;">
                            <ol class="breadcrumbs mb-0">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="/admin/reports">Reports</a></li>
                                <li class="breadcrumb-item active">Vendor Commission</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="col s12">
                <div class="container">
                    <div class="card">
                        <div class="card-content">
                            <form action="/admin/reports/vendor-commission" method="GET">
                                <div class="row">
                                    <div class="col s12 m4">
                                        <label>Start Date</label>
                                        <input type="date" name="startDate" value="<%= startDate %>" class="browser-default">
                                    </div>
                                    <div class="col s12 m4">
                                        <label>End Date</label>
                                        <input type="date" name="endDate" value="<%= endDate %>" class="browser-default">
                                    </div>
                                    <div class="col s12 m4">
                                        <label>&nbsp;</label>
                                        <button type="submit" class="btn waves-effect waves-light" style="width: 100%;">
                                            <i class="material-icons left">filter_list</i> Filter
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Summary Statistics -->
            <div class="col s12">
                <div class="container">
                    <div class="row">
                        <div class="col s12 m6">
                            <div class="card gradient-45deg-amber-amber gradient-shadow">
                                <div class="card-content" style="padding: 20px;">
                                    <h5 class="white-text" style="margin: 0 0 10px 0; font-size: 14px;">Total Commission Earned</h5>
                                    <h3 class="white-text" style="margin: 0; font-size: 28px;">SAR <%= (stats.totalCommission || 0).toFixed(2) %></h3>
                                </div>
                            </div>
                        </div>
                        <div class="col s12 m6">
                            <div class="card gradient-45deg-light-blue-cyan gradient-shadow">
                                <div class="card-content" style="padding: 20px;">
                                    <h5 class="white-text" style="margin: 0 0 10px 0; font-size: 14px;">Total Revenue</h5>
                                    <h3 class="white-text" style="margin: 0; font-size: 28px;">SAR <%= (stats.totalRevenue || 0).toFixed(2) %></h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Vendor Commission Table -->
            <div class="col s12">
                <div class="container">
                    <div class="card">
                        <div class="card-content">
                            <h6 class="card-title">Vendor-wise Commission Breakdown</h6>
                            <div class="row">
                                <div class="col s12">
                                    <table class="striped responsive-table">
                                        <thead>
                                            <tr>
                                                <th>Rank</th>
                                                <th>Vendor Name</th>
                                                <th>Email</th>
                                                <th>Total Transactions</th>
                                                <th>Total Revenue (SAR)</th>
                                                <th>Admin Commission (SAR)</th>
                                                <th>Vendor Earnings (SAR)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (vendorCommissions && vendorCommissions.length > 0) { %>
                                                <% vendorCommissions.forEach((vendor, index) => { %>
                                                    <tr>
                                                        <td><%= ((currentPage - 1) * 20) + index + 1 %></td>
                                                        <td><%= vendor.vendorDetails?.businessName || 'N/A' %></td>
                                                        <td><%= vendor.vendorDetails?.email || 'N/A' %></td>
                                                        <td><%= vendor.totalTransactions || 0 %></td>
                                                        <td><%= (vendor.totalRevenue || 0).toFixed(2) %></td>
                                                        <td><%= (vendor.totalCommission || 0).toFixed(2) %></td>
                                                        <td><%= (vendor.vendorEarnings || 0).toFixed(2) %></td>
                                                    </tr>
                                                <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="7" class="center-align">No commission data available</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Pagination -->
                            <% if (totalPages > 1) { %>
                                <div class="row">
                                    <div class="col s12 center-align">
                                        <ul class="pagination">
                                            <% for(let i = 1; i <= totalPages; i++) { %>
                                                <li class="<%= i == currentPage ? 'active' : 'waves-effect' %>">
                                                    <a href="/admin/reports/vendor-commission?page=<%= i %>&startDate=<%= startDate %>&endDate=<%= endDate %>"><%= i %></a>
                                                </li>
                                            <% } %>
                                        </ul>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <%- include('../_layouts/commonJs') %>

</body>
</html>
