<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<!-- BEGIN: Head-->

<head>
    <%- include('_layouts/head') %>
    <title> Intro Screen List | <%= title %></title>

    <style>
        .ls img{
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .title-text {
            padding: 10px 10px 5px 10px;
            font-size: 16px;
            font-weight: bold;
            color: #333;
        }
        .description-text {
            padding: 0 10px 10px 10px;
            font-size: 14px;
            color: #666;
        }
        .status-badge {
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 12px;
            margin-left: 10px;
        }
        .status-active {
            background-color: #4caf50;
            color: white;
        }
        .status-inactive {
            background-color: #f44336;
            color: white;
        }
    </style>
</head>
<!-- END: Head-->

<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 2-columns" data-open="click" data-menu="vertical-dark-menu" data-col="2-columns">

    <%- include('_layouts/sidenavbar') %>

    <!-- BEGIN: Page Main-->
    <div id="main">
        <div class="row">
            <div class="pt-1 pb-0" id="breadcrumbs-wrapper">
                <div class="container">
                    <div class="row">
                        <%- include('messages', { messages: messages }) %>
                        <div class="col s12 m6 l6">
                            <h6 class="breadcrumbs-title"><span>Manage Intro Screens</span></h6>
                        </div>
                        <div class="col s12 m6 l6 right-align-md" style="margin-top: -10px;">
                            <ol class="breadcrumbs mb-0">
                                <li class="breadcrumb-item"><a href="/admin">Dashboard</a>
                                </li>
                                <li class="breadcrumb-item active">Intro Screen List
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container mt-2">
            <div class="row">
                <div class="col s5 m6 l6">
                    <p><b>Total Intro Screens (<%= introScreens.length %>)</b></p>
                </div>
                <div class="col s7 m6 l6 right-align-md" style="text-align: right;">
                    <a href="/admin/intro-screen/create-intro-screen" class="btn pull-right btn-add btn-breadcrumbs white-text">Create Intro Screen</a>
                </div>
            </div>
        </div>

        <div class="container">

            <div class="row ls">
                <% for( let i=0; i < introScreens.length; i++ ) { %>
                <div style="padding: 10px;"  class="col s12 m6 l6 xl4" >
                    <div id="profile-card" class="card" style="padding: 0%;">
                        <div class="card-image waves-effect waves-block waves-light">
                            <img class="activator" src="<%= process.env.IMAGE_URL %><%= introScreens[i].image %>" />
                        </div>
                        <div class="title-text">
                            <%= introScreens[i].title %>
                        </div>
                        <div class="description-text">
                            <%= introScreens[i].description %>
                        </div>
                        <div style="padding: 0 10px;">
                            <span class="status-badge <%= introScreens[i].isActive ? 'status-active' : 'status-inactive' %>">
                                <%= introScreens[i].isActive ? 'Active' : 'Inactive' %>
                            </span>
                            <small style="color: #666; margin-left: 10px;">Sort: <%= introScreens[i].sort %></small>
                        </div>
                        <div class="card-content" style="padding-left: 0px !important;">
                            <a  href="/admin/intro-screen/delete/<%= introScreens[i]._id %>"  class="btn-floating activator btn-move-up waves-effect waves-light accent-2 z-depth-4 right btn-delete">
                                <i class="material-icons" onclick="return confirm('Are you sure want to delete this intro screen?');">delete</i>
                            </a>
                            <a href="/admin/intro-screen/update-intro-screen/<%= introScreens[i]._id %>" class="btn-floating activator btn-move-up waves-effect waves-light accent-2 z-depth-4 right btn-edit" >
                                <i class="material-icons">edit</i>
                            </a>
                        </div>
                    </div>
                </div>
                <% } %>

            </div>
        </div>
    </div>
    <!-- END: Page Main-->

    <%- include('_layouts/commonJs') %>

</body>

</html>
