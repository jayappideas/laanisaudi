     <title>Request Account Deletion</title>
</head>

<body class="body-scroll">
     <div id="wrapper" class="wrapper clearfix">
          <header class="header header-1 header-transparent header-bordered header-fixed">
               <nav id="primary-menu" class="navbar navbar-fixed-top">
                    <div class="container">
                         <div class="navbar-header">
                              <a class="logo" href="/">
                                   <img class="logo-dark" src="/assets/images/logo/logo-dark.png" alt="Logo">
                                   <img class="logo-light" src="/assets/images/logo/logo-light.png" alt="Logo">
                              </a>
                         </div>
                         <!-- <div class="collapse navbar-collapse pull-right">
                              <ul class="nav navbar-nav navbar-left nav-split">
                                   <li><a href="/">Home</a></li>
                                   <li><a href="/policy">Policy</a></li>
                                   <li><a href="/terms">Terms</a></li>
                                   <li class="active"><a href="/request-delete">Delete Account</a></li>
                              </ul>
                         </div> -->
                    </div>
               </nav>
          </header>

          <section class="section bg-light pt-150 pb-100">
               <div class="container">
                    <div class="row clearfix">
                         <div class="col-md-8 col-md-offset-2 text-center">
                              <h2>Request Account Deletion</h2>
                              <p class="mb-40">Fill out the form below to request permanent deletion of your account.
                                   This process is irreversible.</p>
                              <% if (typeof successMessage !=='undefined' ) { %>
                                   <div class="alert alert-success mt-30">
                                        <%= successMessage %>
                                   </div>
                                   <% } %>

                                        <% if (typeof errorMessage !=='undefined' ) { %>
                                             <div class="alert alert-danger mt-30">
                                                  <%= errorMessage %>
                                             </div>
                                             <% } %>
                                             
                                                  <form action="/request-delete" method="POST" class="form-action">
                                                       <div class="form-group">
                                                            <label for="email">Registered Email Address</label>
                                                            <input type="email" name="email" id="email"
                                                                 placeholder="your@email.com" required
                                                                 autocapitalize="off" autocorrect="off"
                                                                 spellcheck="false" autocomplete="email">

                                                       </div>

                                                       <div class="form-group">
                                                            <label for="reason">Reason for Deletion (optional)</label>
                                                            <textarea name="reason" id="reason" rows="4"
                                                                 placeholder="Tell us why you're leaving..."></textarea>
                                                       </div>

                                                       <div class="form-group text-center mt-30">
                                                            <input type="submit" class="btn btn--primary"
                                                                 value="Submit Request">
                                                       </div>
                                                  </form>


                         </div>
                    </div>
               </div>
          </section>

