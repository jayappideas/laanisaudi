<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<!-- BEGIN: Head-->

<head>
    <%- include('_layouts/head') %>

    <title>Vendor List | <%= title %></title>

    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/data-tables/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/data-tables/extensions/responsive/css/responsive.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/data-tables/css/select.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="/app-assets/css/pages/data-tables.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/css/dropify.min.css">

    <style>
        table tr td,th{
            text-align: center;
        }

        [type='checkbox']+span:not(.lever):before {
        border-color: black;
        }

        [type='checkbox']:checked+span:not(.lever):before {
        border-right-color: black;
        border-bottom-color: black;
        }
    </style>
</head>
<!-- END: Head-->

<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 2-columns" data-open="click" data-menu="vertical-dark-menu" data-col="2-columns">

    <%- include('_layouts/sidenavbar') %>

    <!-- BEGIN: Page Main-->
    <div id="main">
        <div class="row">

            <div class="pt-1 pb-0" id="breadcrumbs-wrapper">
                <div class="container">
                    <div class="row">
                        <%- include('messages', { messages: messages }) %>
                        <div class="col s12 m6 l6">
                            <h6 class="breadcrumbs-title"><span>Manage Vendors</span></h6>
                        </div>
                                <div class="col s12 m6 l6 right-align-md">
                                  <a class="btn gradient-45deg-purple-deep-orange pull-right btn-breadcrumbs modal-trigger" href="#modal">Send Notification</a>
                                </div>

                    </div>
                </div>
            </div>

            <div id="breadcrumbs-wrapper" style="background-color: white;">
                <!-- Search for small screen-->
                <div class="container">
                    <div class="row">
                        <div class="col s12 right-align-md">
                            <a class="btn pull-right btn-add btn-breadcrumbs white-text" href="/vendor/add-vendor">Create Vendor</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col s12">
                <div class="container">
                    <div class="section section-data-tables">
                        <!-- Page Length Options -->
                        <div class="row">
                            <div class="col s12">
                                <div class="card">
                                    <div class="card-content">
                                        <div class="row">
                                            <div class="col s12 overflow">
                                                <table id="page-length-option" class="display">
                                                    <thead>
                                                        <tr>
                                                            <th>Sr</th>
                                                            <th style="width: 60px; text-align: center;">
                                                              <label style="margin: 0; display: flex; align-items: center; justify-content: center;">
                                                                <input type="checkbox" id="selectAll" />
                                                                <span style="margin-left: 4px;">All</span>
                                                              </label>
                                                            </th>
                                                            <th>QR Code</th>
                                                            <th>Email Address</th>
                                                            <th>Business Name</th>
                                                            <th>Business Type</th>
                                                            <th>Application Status</th>
                                                            <!-- <th>Created Date</th> -->
                                                            <th data-orderable="false">Status</th>
                                                            <th data-orderable="false">Action</th>
                                                            <th data-orderable="false">Edit</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% for( let i=0; i < vendors.length; i++ ) { %>
                                                        <tr>
                                                            <td><%= i+1 %></td>
                                                            <td>
                                                              <label>
                                                                <input type="checkbox" name="selectedUsers[]" value="<%= vendors[i].id %>" />
                                                                <span></span>
                                                              </label>
                                                            </td>
                                                            <td width="50px"><img src="<%= process.env.IMAGE_URL%><%= vendors[i].qrCode %>" style="width: 80%;"/></td>
                                                            <td><%= vendors[i].email %></td>
                                                            <td><%= vendors[i].businessName %></td>
                                                            <td><%= vendors[i].businessType ? vendors[i].businessType.en.name : '-' %></td>
                                                            <td>
                                                                <% if (vendors[i].adminApproved) { %>
                                                                    <a style="background-color: rgb(212, 240, 216);padding: 5px 10px 5px 10px;color: green;border-radius: 5px;">Approved</a>
                                                                <% } else { %>
                                                                    <a style="background-color: rgb(240, 212, 212);padding: 5px 10px 5px 10px;color: red;border-radius: 5px;">Pending</a>
                                                                <% } %>
                                                            </td>
                                                            <!-- <td><%= vendors[i].createdAt.toISOString().split('T')[0] %> <%=
                                                                vendors[i].createdAt.toLocaleString('en-US', {
                                                                    timeZone: 'UTC',
                                                                    hour: '2-digit',
                                                                    minute: '2-digit',
                                                                    hour12: true
                                                                  }).replace(',', ''); %>,
                                                            </td> -->
                                                            <td>
                                                                <% if (vendors[i].isActive) { %>
                                                                    <a href="/vendor/change-status/<%= vendors[i]._id %>/0" class="waves-effect border-round waves-light btn green mr-1 mb-2"  onclick="return confirm('Are you sure want to De-Active this vendor?');">Active</a>
                                                                <% } else { %>
                                                                    <a href="/vendor/change-status/<%= vendors[i]._id %>/1" class="waves-effect border-round waves-light btn red mr-1 mb-2"  style="padding: 0px 16px 0px 16px;" onclick="return confirm('Are you sure want to Active this vendor?');">De-Active</a>
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <a href="/vendor/view/<%= vendors[i].id %>"><i class="material-icons">visibility</i></a>
                                                            </td>
                                                            <td>
                                                              <a href="/vendor/edit-vendor/<%= vendors[i].id %>" class="waves-effect border-round waves-light btn mr-1 mb-2"><i class="material-icons">create</i></a>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="modal" class="modal">
                          <div class="modal-content">
                            <h5>Send Notification</h5>
                            <form id="form" class="image-form" method="POST" action="/vendor/notify" onsubmit="validate()" enctype="multipart/form-data">
                              <div class="input-field col s12">
                                <input placeholder="Title" id="title" name="title" type="text">
                                <label for="title">Title</label>
                                <small>
                                  <div id="error1" class="error"></div>
                                </small>
                              </div>
                              <div class="input-field col s12 mt-0 mb-0">
                                <input placeholder="Body" id="body" name="body" type="text">
                                <label for="body">Body</label>
                                <small>
                                  <div id="error2" class="error"></div>
                                </small>
                              </div>

                              <input type="hidden" name="selectedUserIds" id="selectedUserIds" />
                              <button type="submit" class="btn purple" id="submitBtn">Send</button>
                            </form>
                          </div>
                        </div>
                    </div>
                </div>
                <div class="content-overlay"></div>
            </div>
        </div>
    </div>
    <!-- END: Page Main-->

    <%- include('_layouts/commonJs') %>
    <script src="/app-assets/vendors/data-tables/js/jquery.dataTables.min.js"></script>
    <script src="/app-assets/js/scripts/data-tables.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js"></script>
    <script src="/app-assets/js/scripts/form-file-uploads.min.js"></script>

    <script>
      // Modal
      $(document).ready(function() {
        $('.modal').modal();
      });

      // Validation
      const form = document.getElementById('form');
      form.addEventListener('submit', (e) => {
        e.preventDefault();
      });

      // Validate Image upload
      const forms = document.querySelectorAll(".image-form");
      forms.forEach((elem) => {
        elem.addEventListener('submit', (e) => {
          e.preventDefault();
          validate(e.target);
        })
      });

      // Validation
      function validate() {
        let returnVal = true;

        const titleValue = document.getElementById('title').value.trim();
        const bodyValue = document.getElementById('body').value.trim();
        const selectedUserIds = document.getElementById('selectedUserIds').value.trim();

        const errorEl = document.querySelector('.error3');

        if (titleValue == '') {
          document.getElementById('error1').innerText = 'Please enter notification title.';
          returnVal = false;
        } else {
          document.getElementById('error1').innerText = '';
        }

        if (selectedUserIds == '') {
          document.getElementById('error2').innerText = 'Please select some users.';
          returnVal = false;
        } else if (bodyValue == '') {
          document.getElementById('error2').innerText = 'Please enter notification body.';
          returnVal = false;
        } else {
          document.getElementById('error2').innerText = '';
        }



        if (returnVal) {
          document.getElementById('submitBtn').disabled = true;
          document.getElementById('form').submit(); // Use the form element to submit
        }
      }

      document.addEventListener('DOMContentLoaded', function() {
        const selectAllCheckbox = document.getElementById('selectAll');
        const userCheckboxes = document.querySelectorAll('[name="selectedUsers[]"]');
        const selectedUserIdsInput = document.getElementById('selectedUserIds');

        selectAllCheckbox.addEventListener('change', function() {
          userCheckboxes.forEach(function(checkbox) {
            checkbox.checked = selectAllCheckbox.checked;
          });

          updateSelectedUserIds();
        });

        userCheckboxes.forEach(function(checkbox) {
          checkbox.addEventListener('change', function() {
            updateSelectedUserIds();
          });
        });

        function updateSelectedUserIds() {
          const selectedUserIds = Array.from(userCheckboxes)
            .filter(function(checkbox) {
              return checkbox.checked;
            })
            .map(function(checkbox) {
              return checkbox.value;
            });

          selectedUserIdsInput.value = selectedUserIds.join(',');
        }
      });
    </script>
</body>

</html>